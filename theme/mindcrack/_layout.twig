<!doctype html>
<html lang="{{ htmllang() }}">

<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>{% if record.title is defined %}{{ record.title|striptags }} - {% endif %}{{ app.config.get('general/sitename') }}</title>

    <meta name="viewport" content="width=device-width, maximum-scale=1.0"/>

    <link rel="stylesheet" href="{{ paths.theme }}assets/stylesheets/style.css"/>

    {% block head %}
    {% endblock %}
</head>
<body>

    <header>
        <div class="container">
        {{ menu('main', '_menu_main_nav.twig') }}
        </div>
    </header>

    <div id="content">
        <div class="container">
        {% block content %}{% endblock %}
        </div>
    </div>

    <footer>
        <div class="container">
        </div>
    </footer>

</body>
</html>