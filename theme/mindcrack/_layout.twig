<!doctype html>
<!--[if IE 9]><html lang="{{ htmllang() }}" class="lt-ie10"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="{{ htmllang() }}"> <!--<![endif]-->


<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>{% if record.title is defined %}{{ record.title|striptags }} - {% endif %}{{ app.config.get('general/sitename') }}</title>

    <meta name="viewport" content="width=device-width, maximum-scale=1.0"/>

    <link rel="stylesheet" href="{{ paths.theme }}assets/stylesheets/style.css"/>
    <link href='https://fonts.googleapis.com/css?family=Montserrat:700|Work+Sans:400,700' rel='stylesheet' type='text/css'>

    {% block head %}
    {% endblock %}
</head>
<body>

    <header id="main-header">
        <div class="container">
        {{ menu('main', '_menu_header_nav.twig') }}
        </div>
    </header>

    {% block content_outside_container %}{% endblock %}

    <div id="content">
        <div class="container">
        {% block content %}{% endblock %}
        </div>
    </div>

    <footer id="main-footer">
        <div class="container">
            {{ menu('main', '_menu_footer_nav.twig') }}
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.2/js/bootstrap.min.js" integrity="sha384-vZ2WRJMwsjRMW/8U7i6PWi6AlO1L79snBrmgiDpgIWJ82z8eA5lenwvxbMV1PAh7" crossorigin="anonymous"></script>

</body>
</html>